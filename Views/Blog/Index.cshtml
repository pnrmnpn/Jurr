@model IEnumerable<Jurr.Data.Post>
@{
    ViewData["Title"] = "Blog";
}

<section class="contacts-hero">
    <div class="contacts-hero__phone">+38 (067)121 20 20</div>
    <div class="contacts-hero__content">
        <h1 class="contacts-hero__title">НОВИНИ</h1>
        <p class="contacts-hero__subtitle">
            Ми надаємо повний спектр юридичних послуг
            — від консультацій і складання документів до комплексного супроводу бізнесу та захисту інтересів у суді.
        </p>
    </div>
</section>

<section class="section blog-list">
    <div class="container">
        @foreach (var post in Model)
        {
            <article class="blog-item">
                <div class="blog-media">
                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@post.PostId">
                        @if(!string.IsNullOrWhiteSpace(post.ImageUrl))
                        {
                            <img src="@post.ImageUrl" alt="blog image" />
                        }
                        else
                        {
                            <img src="/images/contacts-sunset.jpg" alt="blog image" />
                        }
                    </a>
                </div>
                <div class="blog-content">
                    <div class="blog-meta">ЗАКОН</div>
                    <h3 class="blog-title">
                        <a class="blog-title-link" asp-controller="Blog" asp-action="Details" asp-route-id="@post.PostId">@post.Title</a>
                    </h3>
                    <p class="blog-excerpt">@post.Content</p>
                </div>
            </article>
        }
    </div>
</section>
